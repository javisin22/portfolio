---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
// import Card from '../components/Card.astro';
---

<Layout title="Javier Sin - Portfolio" description="Javier Sin's Porfolio. Last year's Computer Science Student at the University of Rhode Island">
	<main>
		<section class="w-full lg:w-[740px] mx-auto py-44">
			<h1 class="text-white text-5xl font-bold flex flex-row justify-center gap-x-4 pb-10">
			Hey, I'm Javier Sin 
			<div class="flex justify-center items-center">
				<Badge>Available for hiring</Badge>
			</div>
			</h1>

			<img class="rounded-full size-12 object-cover object-top" src="/profile_pic.jpg" alt="Javier Sin's picture"/>
			<h2 class="text-xl opacity-80">Last year Computer Science student from Zaragoza, Spain. Currently studying at the University of Rhode Island.
				Eager to become a great Full Stack Developer.
			</h2>
		</section>
	</main>
</Layout>
